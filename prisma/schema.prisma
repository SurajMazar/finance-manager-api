// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime
  updatedAt DateTime
}

enum Type {
  income
  expense
}

model Category {
  id          Int        @id @default(autoincrement())
  name        String
  description String?    @db.LongText
  incomes     Income[]
  epenses     Expense[]
  parent_id   Int?
  type        Type
  category    Category?   @relation(fields: [parent_id], references: [id])
  createdAt   DateTime
  updatedAt   DateTime
  Category    Category[] @relation("CategoryToCategory")
}

model Income {
  id         Int      @id @default(autoincrement())
  title      String   @db.Text
  amount     Float
  cat_id     Int
  income_cat Category @relation(fields: [cat_id], references: [id])
  createdAt  DateTime
  updatedAt  DateTime
}

model Expense {
  id          Int      @id @default(autoincrement())
  title       String   @db.Text
  amount      Float
  cat_id      Int
  expense_cat Category @relation(fields: [cat_id], references: [id])
  createdAt   DateTime
  updatedAt   DateTime
}
